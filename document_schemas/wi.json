{
    "metadata": {
        "schema_name": "wi",
        "format_version": "0.0.0"
    },

    "structure": [
        { "fieldname": "id",
          "description": "Some description",
          "default": "blah"
        },
        { "fieldname": "title" , "fieldtype": "enum", "options": ["option 1", "option 2"]},
        { "fieldname": "description", "required": false },
        {
            "fieldname": "steps",
            "fieldtype": "list",
            "fields": [
                { "fieldname": "step_number", "fieldtype": "number" },
                { "fieldname": "step" },
                { "fieldname": "code", "required": false },
                { "fieldname": "note", "required": false },
                {
                    "fieldname": "image",
                    "fieldtype": "dict",
                    "required": false,
                    "fields": [
                        { "fieldname": "filepath" },
                        { "fieldname": "caption", "description": "image caption goes here" }
                    ]
                },
                {
                    "fieldname": "references",
                    "fieldtype": "list",
                    "required": false,
                    "fields": [
                        { "fieldname": "title" },
                        { "fieldname": "url" }
                    ]
                }
            ]
        }
    ]
}
